---
import { Icon } from 'astro-icon';

const items = [
	{
		title: 'The Best for Every Budget',
		description: 'We aim to bring a change to this industry, by providing affordable pricing for any project',
		icon: 'flat-color-icons:money-transfer',
	},
	{
		title: 'Quality Work Done Quickly​',
		description: 'Our goal is to focus on quality before quantity, so you will never have any complains',
		icon: 'flat-color-icons:approval',
	},
	{
		title: 'Full Support​',
		description:
			'Question are good they help us become better, we support for all our services no matter the cost of the service',
		icon: 'flat-color-icons:faq',
	},
	{
		title: 'Transparency',
		description:
			'Also our in our ethics, we are 100% transparent and will try to help you understand what we are doing from step 1',
		icon: 'flat-color-icons:like',
	},
	{
		title: 'Expertise',
		description: 'Still new to the business, we have years of experience',
		icon: 'flat-color-icons:clock',
	},
	{
		title: 'UK Based',
		description: 'We are closer to you so, we can also have a face-to-face meeting',
		icon: 'flat-color-icons:globe',
	},
];
---

<section class="relative js-show-on-scroll">
	<div class="absolute inset-0 bg-primary-100 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
	<div class="relative max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
			<div class="mb-8 text-center">
				<h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
					You ask, we create
				</h2>
				<p class="max-w-3xl mx-auto text-center text-xl text-gray-600 dark:text-slate-400">
					All we need is your vision, we will ask all the questions to understand your requirements and create a
					masterpiece.
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start my-12 dark:text-white">
				{
					items.map(({ title, description, icon }) => (
						<div class="relative flex flex-col p-6 bg-white dark:bg-slate-900 rounded shadow-xl hover:shadow-lg transition dark:border dark:border-slate-800  h-full feature-cards">
							<div class="flex items-center mb-4">
								<Icon name={icon} class="w-12 h-12" />

								<div class="ml-4 text-xl font-bold">{title}</div>
							</div>
							<p class="text-gray-500 dark:text-gray-400 text-md">{description}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
